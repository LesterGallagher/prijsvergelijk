                    <ons-icon icon="md-menu"></ons-icon>
                </ons-toolbar-button>
                <ons-back-button class="hidden">Back</ons-back-button>
            </div>
            <div class="center">
                {{ page.title }}
            </div>
        </ons-toolbar>
        <div style="padding: 0 10px">
            <div class="page-content">
                {{ page.content | markdownify }}
            </div>
        </div>
    </ons-page>
</template>
{% if forloop.last %}{% else %}{% endif %}
{% endfor %}